<h1>Listing candidates</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Party</th>
    <th>Quote</th>
    <th>In race</th>
    <th>In race status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @candidates.each do |candidate| %>
  <tr>
    <td><%= candidate.first_name %></td>
    <td><%= candidate.last_name %></td>
    <td><%= candidate.party_id %></td>
    <td><%= candidate.quote %></td>
    <td><%= candidate.in_race %></td>
    <td><%= candidate.in_race_status %></td>
    <td><%= link_to 'Show', candidate %></td>
    <td><%= link_to 'Edit', edit_admin_candidate_path(candidate) %></td>
    <td><%= link_to 'Destroy', candidate, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

